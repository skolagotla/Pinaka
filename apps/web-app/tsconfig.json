{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@/components/*": ["./components/*"],
      "@/lib/*": ["./lib/*", "../../lib/*"],
      "@/app/*": ["./app/*"],
      "@/utils/*": ["../../lib/utils/*"],
      "@/hooks/*": ["../../lib/hooks/*"],
      "@/services/*": ["../../lib/services/*"],
      "@/constants/*": ["../../lib/constants/*"],
      "@/schema/*": ["../../schema/*"],
      "@/packages/*": ["../../packages/*"],
      "@/domains/*": ["../../domains/*"],
      "@/prisma/*": ["../../prisma/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    ".next"
  ]
}

