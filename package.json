{
  "name": "pinaka",
  "version": "1.0.0",
  "description": "Pinaka - Property Management Platform",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "bootstrap": "pnpm install",
    "dev": "pnpm --filter @pinaka/web-app dev",
    "dev:log": "pnpm --filter @pinaka/web-app dev:log",
    "dev:backend": "cd apps/backend-api && uvicorn main:app --reload --host 0.0.0.0 --port 8000",
    "dev:backend:log": "cd apps/backend-api && bash run.sh",
    "start:webapp:log": "pnpm --filter @pinaka/web-app start:log",
    "build": "pnpm run generate:types || echo '⚠️  OpenAPI types generation skipped (FastAPI server may not be running)' && pnpm run build:packages && pnpm run build:apps",
    "build:apps": "pnpm --filter '@pinaka/web-app' build",
    "build:packages": "pnpm --filter './packages/*' --filter '!@pinaka/server-stubs' --filter '!@pinaka/domains' build",
    "build:schema": "cd schema/types && npm run build",
    "generate:schema": "cd schema/types && npm run generate:all",
    "schema:generate": "node ci/generate-schemas.js",
    "validate:schema": "cd schema/types && npm run validate",
    "schema:lint": "cd schema/types && npm run lint",
    "lint:schema": "cd schema/types && npm run lint",
    "generate:all": "pnpm run generate:schema && pnpm run generate:client && pnpm run generate:stubs",
    "generate:types": "bash scripts/generate-openapi-types.sh",
    "generate:api-handlers": "tsx scripts/generate-api-handlers.ts",
    "generate:api-routes": "tsx scripts/generate-api-routes.ts",
    "generate:client": "cd packages/generated && npm run generate:client",
    "generate:stubs": "cd packages/generated && npm run generate:stubs",
    "lint": "next lint",
    "lint:boundaries": "depcruise --config .dependency-cruiser.js --output-type err-html domains lib apps",
    "duplication:check": "jscpd --config .jscpd.json .",
    "duplication:report": "cat jscpd-report.json | jq '.duplicates | length'",
    "check:api-client": "node ci/check-api-client-usage.js",
    "refactor:imports": "jscodeshift -t ci/codemods/replace-local-types.js . --extensions=ts,tsx,js,jsx --parser=tsx",
    "contract-tests": "pnpm run contract-tests:provider && pnpm run contract-tests:consumer",
    "contract-tests:provider": "dredd schema/openapi.yaml http://localhost:3001 --server 'pnpm run dev:api' --server-wait 10",
    "contract-tests:consumer": "jest --testPathPattern=contract",
    "check:duplicates": "npm run duplication:check",
    "cleanup:temp": "./scripts/cleanup-temp-files.sh",
    "cleanup:temp:dry-run": "./scripts/cleanup-temp-files.sh --dry-run",
    "analyze:bundle": "ANALYZE=true pnpm --filter @pinaka/web-app build",
    "analyze:bundle:run": "bash scripts/run-bundle-analysis.sh",
    "optimize:analyze": "node scripts/optimize-bundle.js && node scripts/optimize-database-queries.js",
    "test": "echo \"Tests coming soon\"",
    "test:domain": "jest domains --testPathPattern=domain",
    "clean": "rm -rf node_modules packages/*/node_modules apps/*/node_modules domains/*/node_modules packages/*/dist apps/*/dist domains/*/dist"
  },
  "keywords": [
    "pinaka",
    "property-management",
    "monorepo"
  ],
  "author": "",
  "license": "ISC",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "devDependencies": {
    "@pact-foundation/pact": "^13.0.0",
    "@pact-foundation/pact-node": "^10.18.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^24.10.0",
    "@types/react": "^18.3.3",
    "dredd": "^14.0.0",
    "jscodeshift": "^0.15.1",
    "jscpd": "^4.0.5",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@ant-design/charts": "^1.4.3",
    "@ant-design/icons": "^5.6.1",
    "@ant-design/pro-card": "^2.10.0",
    "antd": "^5.29.0",
    "dayjs": "^1.11.19",
    "dotenv": "^16.6.1",
    "json-rules-engine": "^6.6.0",
    "lodash": "^4.17.21",
    "pdf-lib": "^1.17.1",
    "pdfkit": "^0.13.0",
    "react-pdf": "^7.7.3",
    "react-resizable": "^3.0.5",
    "react-signature-canvas": "^1.0.7",
    "web-vitals": "^3.5.2",
    "zod": "^3.25.76"
  }
}
